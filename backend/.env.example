# Environment variables for Project Phoenix Backend
# Copy this file to .env and update with your values

# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project_phoenix
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# External API Keys (for production)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
COMPUTER_VISION_API_KEY=your_cv_api_key

# Admin Configuration
ADMIN_EMAIL=admin@meesho.com
ADMIN_PASSWORD=admin123

# Demo Mode
DEMO_MODE=true